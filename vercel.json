{
  "builds": [
    {
      "src": "platform/frontend/**",
      "use": "@vercel/static"
    }
  ],
  "routes": [
    {
      "src": "/(.*)",
      "dest": "/platform/frontend/$1"
    }
  ],
  "rewrites": [
    {
      "source": "/api/(.*)",
      "destination": "https://YOUR-RAILWAY-BACKEND-URL.up.railway.app/api/$1"
    }
  ]
}
